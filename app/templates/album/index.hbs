{{gallery-album-path}}
{{#if model}}
  {{#each model as |site|}}

    {{#if (is-equal site.total 0)}}
    {{else}}
      <h4>
      {{#link-to 'album/site' site.site}}
        {{site.site}} ({{site.total}})
      {{/link-to}}
      </h4>
      {{#photo-swipe items=site.items history=false as |photoswipe|}}
        {{#each site.items as |item index|}}
          {{#if (is-equal item.info.type 'album')}}
            {{#link-to 'album/detail' site.site (g-short-album-id item.info.id true)}}
              <img src={{item.small}} alt={{item.title}} />
            {{/link-to}}
          {{else}}
            <img src={{item.small}} alt={{item.title}} {{action photoswipe.actions.open (hash index=index)}} />
          {{/if}}
        {{/each}}
      {{/photo-swipe}}
    {{/if}}

  {{/each}}
{{/if}}
{{outlet}}
