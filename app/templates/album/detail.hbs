{{gallery-album-path site=model.site path=model.path}}
{{#if model.album.items}}
  {{#photo-swipe items=model.album.items history=false as |photoswipe|}}

    {{#each model.album.items as |item index|}}
      {{#if (is-equal item.info.type 'album')}}
        {{#link-to 'album/detail' (g-short-album-id item.info.id true)}}
          <img src={{item.small}} alt={{item.title}}/>
        {{/link-to}}
      {{else}}
        <img src={{item.small}} alt={{item.title}} {{action photoswipe.actions.open (hash index=index)}} />
      {{/if}}
    {{/each}}

  {{/photo-swipe}}
{{/if}}
{{outlet}}
