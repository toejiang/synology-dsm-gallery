{{#if (is-equal album.type 'album')}}
  {{#link-to 'album/detail' (g-album-image-shortid album.id)}}
    <img src='{{await (g-album-image-src album size)}}'/>
  {{/link-to}}
{{else}}
  {{#link-to 'album/detail' (g-album-image-shortid album.id (is-equal size 'large'))}}
    <img src='{{await (g-album-image-src album size)}}'/>
  {{/link-to}}
{{/if}}
