{{#if model}}
  {{gallery-share-path site=model.site}}

  {{#gallery-photoswipe items=model.items history=false as |open photoswipe|}}
    {{#each model.items as |item index|}}
      {{#link-to 'share/detail' model.site item.info.additional.public_share.shareid}}
        <img id={{item.info.id}} src={{item.msrc}} alt={{item.title}} onload='if(this.height>320)this.height=320' />
      {{/link-to}}
    {{/each}}
  {{/gallery-photoswipe}}

{{/if}}
{{outlet}}
