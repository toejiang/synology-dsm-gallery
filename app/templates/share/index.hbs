{{gallery-share-path}}
{{#if model}}
  {{#each model as |site|}}

    {{#if (is-equal site.total 0)}}
    {{else}}
      <h4>
      {{#link-to 'share/site' site.site}}
        {{site.site}} ({{site.total}})
      {{/link-to}}
      </h4>
      {{#gallery-photoswipe items=site.items history=false as |open photoswipe|}}
        {{#each site.items as |item index|}}
          {{#link-to 'share/detail' site.site item.info.additional.public_share.shareid}}
            <img id={{item.info.id}} src={{item.small}} alt={{item.title}} onload='if(this.height>320)this.height=320' />
          {{/link-to}}
        {{/each}}
      {{/gallery-photoswipe}}
    {{/if}}

  {{/each}}
{{/if}}
{{outlet}}
